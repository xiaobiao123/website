#Html("begin")
#Head("begin")
#Title("系统管理-产品包评论管理")
#LoadBootstrap("default")
#LoadSUI("default")
#Head("end")
<body>
    #parse("header.vm")
    <form class="form-inline align-right" action="$request.contextPath/goods/review/listPage.htm?isDeleted=y" method="post">
        <div class="page-header">
        <!-- /.page-header -->
    
      <ul class="nav nav-tabs" id="online">
          <li class="">
             <a href="$request.contextPath/goods/review/listPage.htm?isDeleted=n">
               在线评论
            </a>
          </li>
          <li class="active">
           <a href="$request.contextPath/goods/review/listPage.htm?isDeleted=y">
               作废评论
            </a>
          </li>
        </ul>
        <!--nav-table end-->
        
        <div class="tab-content">
            <div class="table-responsive">
                <div class="dataTables_wrapper">
                    <!-- 结账 多个class "amount1-list" -->
                    <table id="" class="table table-striped table-bordered table-hover J_Table amount-list">
                        <thead>
                            <tr>
                                <th width="80px" class="center">#</th>
                                <th width="80px" class="center">产品包名称</th>
                                <th width="1300px" class="center">评论</th>
                            </tr>
                        </thead>
    
                        <tbody>
                            #if($page && $page.result)
                                #foreach($info in $!page.result)
                                    <tr data-id="$!info.id">
                                        <td width="80px" class="center" style="vertical-align:middle">$!info.id</td>
                                       <td width="80px" class="center" style="vertical-align:middle" >
                                            $!info.goodsName
                                            </td>
                                        <td width="1300px" class="center" maxlength="15" style="vertical-align:middle">$!info.content</td>
                                    </tr>
                                #end
                            #end
                        </tbody>
                    </table>
    
                    <!--批量操作+分页 start-->
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="dataTables_paginate paging_bootstrap">
                                #Pagination($page)
                            </div>
                        </div>
                    </div>
                    <!--批量操作+分页 end-->
                </div>
            </div><!-- /.table-responsive -->
        </div><!-- /.table-content -->
        </form>
    <!-- PAGE CONTENT ENDS -->
    #parse("footer.vm")
</body>
#Html("end")
