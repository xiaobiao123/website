#Html("begin")
#Head("begin")
#Title("系统管理-问题管理")
#LoadBootstrap("default")
#LoadSUI("default")
#LoadSUI("editor")
#Head("end")
<body class="ace-settings-add-container">
    <form class="form-inline align-right"  width="800"
        action="$request.contextPath/specialTopic/articleList.htm?specialTopicId=$!specialTopicId" method="post"
        id="f1" name = "f1">
        <div class="page-header">
            <div class="form-group">
                <label> 文章标题： </label>
                <input type="text" name="name" class="input-medium">
</div>
<div class="vspace-sm"></div>
<div class="form-group">
    <button class="btn btn-sm btn-primary" type="submit">
        <i class="icon-search align-top"></i>
        查询
    </button>
</div>
            </div>
            <div class="tab-content">
                <div class="table-responsive">
                    <div class="dataTables_wrapper">
                        <!-- 结账 多个class "amount1-list" -->
                        <table id="" class="table table-striped table-bordered table-hover J_Table amount-list">
                         
                            <thead>
                                <tr>
                                    <th width="80px" class = "center">  
                                        <input id="SelectAll" type="checkbox">全选/反选
                                    </th>
                                    <th width="480px" class="center">标题</th>
                                    <th width="280px" class="center">创建人</th>
                                    <th width="280px" class="center">创建时间</th>
                                    <th class="center">操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                #if($page && $page.result)
                                    #foreach($info in $!page.result)
                                        <tr data-id="$!info.id">
                                            <td class="center">
                                        <input id="subcheck" name="subcheck" value = "$!info.id" type="checkbox"/></td>
                                            <td class="center">$!info.articleName</td>
                                            <td class="center">$!info.userName</td>
                                            <td class="center">
                                                <p>$!date.format($!info.gmtCreate)</p>
                                            </td>
                                            <td class="center">
                                                <a  href="$!request.contextPath/specialTopic/addAssociation.htm?specialTopicId=$!specialTopicId&associationIds=$!info.id&contentType=article">添加
                                                </a>
                                            </td>
                                        </tr>
                                    #end
                                #end
                            </tbody>
                        </table>
                        <!--批量操作+分页 start-->
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="dataTables_paginate paging_bootstrap">
                                    <span  text-align="left">
                                <a onclick="insertSelected()">插入列表
                        </a>
                                    </span>
                        
                                    #Pagination($page)
                                </div>
                            </div>
                        </div>
                        <!--批量操作+分页 end-->
                    </div>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.table-content -->
</form>
<!-- PAGE CONTENT ENDS -->
</body>
<script>
 //全选、取消全选的事件  
    
    $("#SelectAll").click(function(){
    var bischecked = $("#SelectAll").is(':checked');
    var subcheck = $('input[name="subcheck"]');
    bischecked?subcheck.prop('checked',true):subcheck.prop('checked',false);
    });
    
    function insertSelected(){
     var ids="";
     var count = 0;
        $('input[name="subcheck"]:checked').each(function() {
                ids += ","+$(this).val();
                count = count +1;
        });
        if(count > 0){
         ids = ids.substring(1,ids.length);
        window.location.href="$!request.contextPath/specialTopic/addAssociation.htm?specialTopicId=$!specialTopicId&contentType=article&associationIds="+ids;
    }else{
    alert("请选择添加项！");
    }
    }
</script>
#Html("end")